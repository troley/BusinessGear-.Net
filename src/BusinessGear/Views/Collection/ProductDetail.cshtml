@model Product

@{
    ViewBag.Title = "Products Detail";
    ViewBag.Css = "/css/collection.css";
    Layout = "_Layout";
}

<header class="container-fluid">
    <div>
        @Html.Partial("HeaderBrandPartial")
    </div>
</header>

<section class="main">
    <div class="container body-container">
        <div class="row">
            <div class="breadcrumbs">
                <a asp-controller="Home" asp-action="Index">Home&ensp;<i class="fa fa-angle-double-right"></i></a>
                <a asp-action="Index">Collection&ensp;<i class="fa fa-angle-double-right"></i>
                </a>
                <span>@Model.Name, @Model.Id</span>
            </div>
        </div>
        <div class="row">
            <div class="back-to-collection">
                <h2>
                    <a asp-controller="Collection" asp-action="Index">
                        &longleftarrow; Back to the
                        collection
                    </a>
                </h2>
            </div>
        </div>
        <div class="row" style="margin-top: 30px;">
            <div class="detail-imgs-wrapper col-md-9">
                <div class="aside-imgs">
                    <div class="col-md-4">
                        <div class="first-detail-img">
                            <div class="col-md-12">
                                <img class="img-responsive" src="http://lorempixel.com/250/250"
                                     alt="Small product detail image.">
                            </div>
                        </div>
                        <div class="next-detail-img">
                            <div class="col-md-12" style="margin-top: 30px;">
                                <img class="img-responsive" src="http://lorempixel.com/350/350"
                                     alt="Small product detail image.">
                            </div>
                        </div>
                        <div class="next-detail-img">
                            <div class="col-md-12" style="margin-top: 30px;">
                                <img class="img-responsive" src="http://lorempixel.com/350/350"
                                     alt="Small product detail image.">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="large-detail-img">
                    <div class="col-md-8">
                        <img class="img-responsive" src="http://lorempixel.com/730/500" alt="Big product detail image.">
                    </div>
                </div>
            </div>
            <div class="detail-description-wrapper col-md-3">
                <div class="product-detail-header">
                    <div class="col-md-12">
                        <h2 style="margin: -8px 0 0 0;">@Model.Name, @Model.Id</h2>
                    </div>
                </div>
                <div class="product-detail-category">
                    <div class="col-md-12">
                        <p>
                            Category: @Model.Category.Name
                        </p>
                    </div>
                </div>
                <div class="product-detail-body">
                    <div class="col-md-12">
                        <p>
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="push"></div>
    </div>
</section>